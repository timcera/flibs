#
# Options specific to the fortran compiler
#
FC = g95
F90OPTS = $(FOPTS_BASE) -fstatic -fzero -cpp -ftrace=full -fmod=$(libdir) -Wall -I$(srcdir) -fbounds-check
F90OPTS += -D_PLATFORM_FORTRAN_2003
F90OPTS += -D_PLATFORM_SYSTEM_FUNCTION
F90OPTS += -D_PLATFORM_CHDIR_FUNCTION
F90OPTS += -D_PLATFORM_STAT_FUNCTION
F90OPTS += -D_VSTRING_POINTER
F77OPTS = $(F90OPTS)
LINK = g95
LOPTS = $(LOPTS_BASE)



